<head>
  <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
  <link rel="shortcut icon" href="{{ '/favicon.ico' | prepend: site.baseurl | prepend: site.url }}">

  <!-- Title -->
  {% if page.collection == "apps" %}
    {% assign title = page.name | append: " | QA Tips" %}
  {% else %}
    {% assign title = page.title %}
  {% endif %}
  <title>{{ title }}</title>

  <!-- CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">

  <link rel="stylesheet" href="{{ site.url }}/assets/css/main.css">
  <link rel="stylesheet" href="{{ site.url }}/assets/css/tool.css">

  {% if page.css %}
    <!-- Custom CSS -->
    {% for css_file in page.css %}
      <link rel="stylesheet" href="{{ site.url }}/assets/css/{{ css_file }}.css" type="text/css">
    {% endfor %}
  {% endif %}

  <!-- JS -->
  <script defer src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script defer src="https://code.jquery.com/ui/1.13.1/jquery-ui.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>

  <script defer type="module" src="{{ site.url }}/assets/js/main.js"></script>

  {% if page.module %}
    <!-- Modules JS -->
    {% for mod in page.module %}
      {% if mod == "ace.js" %}
        <script defer src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.6.0/ace.js"></script>
        <script defer type="module" src="{{ site.url }}/assets/js/tool.js"></script>
      {% elsif mod == "jsoneditor.min.js" %}
        <script defer src="https://cdn.jsdelivr.net/npm/jsoneditor@9.9.0/dist/jsoneditor.min.js"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/lodash@4.17.21/lodash.min.js"></script>

        <link href="https://cdn.jsdelivr.net/npm/jsoneditor@9.9.0/dist/img/jsoneditor-icons.svg">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/jsoneditor@9.9.0/dist/jsoneditor.min.css">
      {% else %}
        <script defer type="module" src="{{ site.url }}/assets/js/{{ mod }}.js"></script>
      {% endif %}
    {% endfor %}
  {% endif %}

  <!-- Jekyll Plugins -->
  {% feed_meta %}
  {% seo %}

  {% if jekyll.environment == "production" %}
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-X9N4MPMD8W"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() { dataLayer.push(arguments); }
      gtag('js', new Date());
      gtag('config', 'G-X9N4MPMD8W');
    </script>
  {% endif %}
</head>
